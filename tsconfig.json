{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "inlineSourceMap": true,
    "moduleResolution": "node",
    "sourceRoot": "./src",
    "outDir": "./dist",
    "typeRoots": ["node_modules/@types"],
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts", "node_modules/**"]
}
